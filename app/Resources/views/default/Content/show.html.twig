{% extends "default/Admin/admin.html.twig" %}

{% block content -%}
    <article class="module width_full clearfix">
    <header>
		<h3 class="tabs_involved">Контент</h3>

		</header>

    <table class="tablevertical">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Заголовок</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Текст</th>
                <td>{{ entity.field|raw}}</td>
            </tr>
            <tr>
                <th>Категория</th>
                <td>{{entity.categories}}</td>
            </tr>
            <tr>
                <th>Дата создания</th>
                <td>{{ entity.createdDate|date('Y-m-d') }}</td>
            </tr>
        </tbody>
    </table>
    <footer>
                      <div class="submit_link">
                           {{ form(delete_form) }}
                      </div>
                      <div class="submit_link">
                           <a class='button' href="{{ path('content_edit', { 'id': entity.id }) }}">Редактировать</a>
                      </div>
                  </footer>
   </article>

        <ul class="record_actions">
    <li>
        <a href="{{ path('content') }}">
            Вернуться к списку
        </a>
    </li>


</ul>
{% endblock %}